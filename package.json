{
	"name": "@sidp/iframes",
	"version": "0.1.0",
	"main": "lib/index.js",
	"types": "types/index.d.ts",
	"author": "Peter Simonsson <peter@simonsson.com>",
	"repository": "git@github.com:sidp/iframes.git",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev:build": "rollup -c",
		"dev:serve-origin1": "http-server ./example -s -p 4020",
		"dev:serve-origin2": "http-server ./example -s -p 4020 -a foreign.test",
		"dev:serve-build": "http-server ./build -s -p 4021",
		"dev:watch": "yarn run dev:build --watch",
		"dev":
			"concurrently --kill-others-on-fail 'yarn run dev:watch' 'yarn run dev:serve-origin1' 'yarn run dev:serve-origin2' 'yarn run dev:serve-build'",
		"prepublishOnly": "yarn run build"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^22.2.0",
		"concurrently": "^3.5.1",
		"http-server": "^0.11.1",
		"jest": "^23.0.0-alpha.0",
		"prettier": "^1.10.2",
		"rollup": "^0.56.5",
		"rollup-plugin-commonjs": "^9.1.0",
		"rollup-plugin-node-resolve": "^3.2.0",
		"rollup-plugin-typescript": "^0.8.1",
		"ts-jest": "^22.4.1",
		"typescript": "^2.7.2"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
	}
}
